<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
        http://www.springframework.org/schema/beans/spring-beans-3.2.xsd
        http://www.springframework.org/schema/context
        http://www.springframework.org/schema/context/spring-context-3.2.xsd">

    <context:annotation-config/>
    <context:component-scan base-package="com.epam.hw1"/>

    <bean id="storageProperties" class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer"
          p:location="storage.properties"/>

    <bean class="com.epam.hw1.storage.StoragePostProcessor" p:entitiesFilePath="${pathToEntitiesFile}"/>
</beans>
